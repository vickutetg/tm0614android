<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DogActivity" xmlns:app="http://schemas.android.com/apk/res/com.hoangphan.tutor0302_doggy">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Press me" />

    <GridLayout
        android:id="@+id/buttonGrp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2" >

        <Button
            android:id="@+id/btnAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayNormal"
            android:text="Alert Dialog" />
        
        <Button
            android:id="@+id/btnCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayImage"
            android:text="Custom Dialog" />
        
        <Button
            android:id="@+id/btnWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayWaiting"
            android:text="Waiting Dialog" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayDownloading"
            android:text="Downloading Dialog" />
    </GridLayout>

    <ImageView
        android:id="@+id/dogImg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.76"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/dogNr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="test" />

</LinearLayout>