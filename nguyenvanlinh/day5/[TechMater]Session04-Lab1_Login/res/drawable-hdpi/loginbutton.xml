<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape android:shape="oval">
            
            <solid 
                android:color="#FF9900"/>
            
            <stroke 
                android:width="1dp"
                android:color="#FF99FF"/>
            
            <corners 
                android:radius="10dp"/>
            
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    
