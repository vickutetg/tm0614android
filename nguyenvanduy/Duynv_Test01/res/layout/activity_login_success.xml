<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#fff"
        android:background="#0000bb"
        android:padding="6dp"
        android:textSize="20sp"
         />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:weightSum="10"
        android:layout_marginTop="15dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hoten"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="@string/ht_hint"
            />
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:weightSum="10"
        android:layout_marginTop="15dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cmnd"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="@string/cmnd_hint"
            />
        
    </LinearLayout>
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title2"
        android:textColor="#fff"
        android:background="#0000bb"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:textSize="15sp"
         />
     
     
 
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:weightSum="10"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        
          <RadioGroup
				 android:id="@+id/radioGroup1"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:layout_gravity="center"
				 android:gravity="center"
				 android:background="#fff"
				  >
				 
				<RadioButton
				 android:id="@+id/rad_tc"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:checked="true"
				 android:text="@string/tc" />
				 
				<RadioButton
				 android:id="@+id/rad_cd"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:checked="true"
				 android:text="@string/cd" />
				
				<RadioButton
				 android:id="@+id/rad_dh"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:checked="true"
				 android:text="@string/dh" />
		</RadioGroup>
		
     </LinearLayout>
     
      
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title3"
        android:textColor="#fff"
        android:background="#0000bb"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:textSize="15sp"
         />
     
       <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#fff"
	        android:layout_gravity="center"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp"
        >
          
           <CheckBox
			 android:id="@+id/ck_db"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_gravity="right"
			 android:checked="true"
			 android:text="@string/db" />
           
           <CheckBox
			 android:id="@+id/ck_ds"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_gravity="right"
			 android:checked="true"
			 android:text="@string/ds" />
           
           <CheckBox
			 android:id="@+id/ck_code"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_gravity="right"
			 android:checked="true"
			 android:text="@string/code" />
          
       </LinearLayout>
       
       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title4"
        android:textColor="#fff"
        android:background="#0000bb"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:textSize="15sp"
         />
       <EditText 
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:hint=""
           
           />

</LinearLayout>
