<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title" 
        android:textSize="25sp"
        android:gravity="center"
        android:background="#5999f9"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        />
    
    <LinearLayout 
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/drink" />
        <Spinner 
            android:id="@+id/spinner_drink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            />        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/quantity" />
       
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/sub"/>
        
        <EditText 
            android:id="@+id/txt_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" 
            android:text="@string/txt_quantity"
            android:hint="@string/txt_quantity"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        
         <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/add"
            />        
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/label_vat" />
       
        <EditText 
            android:id="@+id/txt_vat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/txt_vat"
            android:hint="@string/txt_vat"
            android:enabled="false"
            />
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/label_total" />
       
        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/total" />
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="@string/calculate"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        />

</LinearLayout>
