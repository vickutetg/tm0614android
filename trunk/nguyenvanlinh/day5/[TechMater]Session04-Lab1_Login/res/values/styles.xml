<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="loginbutton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#FF9900</item>
    </style>

	
    <!-- style cua button Forgot password -->
    <style name="forgotpassword">
        <item name="android:background">#FF0000</item>
    </style>
    
    <style name="forgot" parent="forgotpassword">
        <item name="android:text">Forgot</item>
        <item name="android:textSize">20dp</item>
		<item name="android:textColor">#00CC00</item>      
    </style>
    
    <style name="password" parent="forgotpassword">
        <item name="android:text">password</item>
        <item name="android:textSize">10dp</item>
		<item name="android:textColor">#FFFF33</item>      
    </style>
    
    <!-- style cua dialog -->
    <!-- message -->
    <style name="DialogText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- title -->
    <style name="DialogText.Title">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>