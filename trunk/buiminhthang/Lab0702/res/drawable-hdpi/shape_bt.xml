<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- //hiệu ứng khi bấm vào nút -->
<shape>
            <gradient android:angle="270" android:endColor="#f57365" android:startColor="#ee4c3b" />

            <stroke />

            <corners android:radius="40dp" />

            <padding  />
        </shape></item>
    <item>
        <!-- hiệu ứng ban đầu -->
<shape>
            <gradient android:angle="270" android:endColor="#fff" android:startColor="#fff" />

            <stroke />

            <corners android:radius="40dp" />

            <padding  />
        </shape></item>

</selector>