<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btnTblayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Layout" />

    <Button
        android:id="@+id/btnGrilayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grid Layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnRelaLayout"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Relative Layout" />

        <Button
            android:id="@+id/btnAbslayout"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Absolute Layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnLinelayout"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Linear Layout" />

        <Button
            android:id="@+id/btnLinelayoutW"
            android:layout_width="0dip"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Linear Layout with local" />

    </LinearLayout>

</LinearLayout>
