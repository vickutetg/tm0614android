<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="StyleItemOffer" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/item_offer</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:textSize">22.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleItemAnswer" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_slot</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>