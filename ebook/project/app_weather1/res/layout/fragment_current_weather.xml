<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView android:id="@+id/titleTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|center_vertical"
		android:layout_marginTop="20dip" android:text="Current Conditions"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="30dip" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/sunriseIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/sunriseTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/sunsetIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/sunsetTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/sunriseIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/sunriseTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/tempIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/tempTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/pressureIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/pressureTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
		<TextView android:id="@+id/humidityIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/humidityTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/tempMinIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<TextView android:id="@+id/tempMinTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/tempMaxIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/tempMaxTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/windIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/windMaxTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/rainIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/rainTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/cloudsIdTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/cloudsTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>