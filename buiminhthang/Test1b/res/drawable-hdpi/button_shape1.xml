<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
<!--         //hiệu ứng khi bấm vào nút -->
        <shape>
            <gradient
               
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#f4f4f4"
                 />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#d9d7d3" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>      
<!--         hiệu ứng ban đầu   -->
        <shape>
            <gradient
            
                android:angle="270" />
            <stroke
                  android:width="1dp"
                android:color="#3db972"/>
            <corners
                android:radius="40dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
